.category_contents__category_box__items_box__items
  %ul.item_list
    - @items.each do |item|
      %li.item_list__one_item
        .item_list__one_item__box
          = link_to item_path(10), class: "item_link" do
            .item_list__one_item__box__show_item
              = image_tag "#{item.images[0].image_url}", class: "item_image"
              .item_list__one_item__box__show_item__price
                %p.img_title
                  = "¥#{item.price}"
            .item_list__one_item__box__show_item__item_name
              %p.item_name
                = item.name


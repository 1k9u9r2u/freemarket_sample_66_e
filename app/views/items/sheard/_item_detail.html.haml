.item__details
  %h2.item__details__name
    = @items.name
  .item__details__main_content
    .item__details__main_content_boxes
      .main_photo
        .photos
          = image_tag "#{@items.images[0].image_url}", class: "photos"
        .small_photos
          - @images.each do |image|
            = image_tag image.image_url.to_s, class: "small_photo"


      %table.item_detail_table
        %tbody
          %tr
            %th 出品者
            %td
              .seller_name chanken
              .user_rating
                .item_user_ratings
                %i.fas.fa-laugh
                %span 131
                .item_user_ratings
                %i.fas.fa-meh
                %span 3
                .item_user_ratings
                %i.fas.fa-frown
                %span 1
          %tr
            %th カテゴリー
            %td
              .item_category
                .item_category_top
                %span 
                  = @items.category_id
                
          %tr
            %th ブランド
            %td 
              = @items.brand_id
          %tr
            %th 商品サイズ
            %td 
              = @items.size_id
          %tr
            %th 商品の状態
            %td 
              = @items.condition_id
          %tr
            %th 配送料の負担
            %td 
              = @items.delivery_charge_id
          %tr
            %th 配送の方法
            %td 
              = @items.delivery_way_id
          %tr
            %th 発送元地域
            %td 
              = @items.prefecture_id
          %tr
            %th 発送日の目安
            %td 
              = @items.delivery_days_id
    .item_price_box
      %span.item_price
        = "¥#{@items.price}"
      %span.item_tax (税込)
      %span.item_shipping_fee 送料込み
    .item_buy_btn
      = link_to "購入する", cards_path
    .shipping_note_message




      -if @items.delivery_way_id ==10
        %p この商品はゆうゆうフリマ便を利用しているため、アプリからのみ購入できます。
    .item_description
      = @items.description

      .item_button_container
        .item_button
          .item_button__left
            .fas.fa-heart いいね
          .item_button__right
            .fas.fa-flag  不適切な商品の報告
        .item_text
          .fas.fa-unlock-alt  あんしん・あんぜんへの取り組み

.signup_address
  = render "/devise/shared/signup_header"

  .step4__bottom_contents
    .step4__bottom_contents__top
      %h2.top_string 発送元・お届け先住所入力
    .step4__bottom_contents__bottom
      = form_for @address do |f|
        .step4__bottom_contents__bottom__box
          .step4__bottom_contents__bottom__box__top
            .step4__bottom_contents__bottom__box__top__title
              %p お名前
            .step4__bottom_contents__bottom__box__top__essential_icon
              %p 必須
          = f.text_field :last_name, autocomplete: "last_name", placeholder: '例) 山田', class: "step4__bottom_contents__bottom__box__input"
          = f.text_field :first_name, autocomplete: "first_name", placeholder: '例) 彩', class: "step4__bottom_contents__bottom__box__input"
          .step4__bottom_contents__bottom__box__top
            .step4__bottom_contents__bottom__box__top__title
              %p お名前カナ
            .step4__bottom_contents__bottom__box__top__essential_icon
              %p 必須
          = f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: '例) ヤマダ', class: "step4__bottom_contents__bottom__box__input"
          = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: '例) アヤ', class: "step4__bottom_contents__bottom__box__input"


          .step4__bottom_contents__bottom__box__top
            .step4__bottom_contents__bottom__box__top__title
              %p 郵便番号
            .step4__bottom_contents__bottom__box__top__essential_icon
              %p 必須
          = f.text_field :postal_code, autocomplete: "postal_code", placeholder: '例) 123-4567', class: "step4__bottom_contents__bottom__box__input"
        

          .step4__bottom_contents__bottom__box__top
            .step4__bottom_contents__bottom__box__top__title
              %p 都道府県
            .step4__bottom_contents__bottom__box__top__essential_icon
              %p 必須
          %i.icon_arrow_bottom
          .prefectures_select_wrap
            = f.select :prefectures, Address.prefectures.keys,{prompt: '---'}, class:"prefectures_select_wrap__select"
          .step4__bottom_contents__bottom__box__top
            .step4__bottom_contents__bottom__box__top__title
              %p 市区町村
            .step4__bottom_contents__bottom__box__top__essential_icon
              %p 必須
          = f.text_field :municipality, autocomplete: "municipality", placeholder: '例) 横浜市緑区', class: "step4__bottom_contents__bottom__box__input"
          .step4__bottom_contents__bottom__box__top
            .step4__bottom_contents__bottom__box__top__title
              %p 番地
            .step4__bottom_contents__bottom__box__top__essential_icon
              %p 必須
          = f.text_field :street_number, autocomplete: "street_number", placeholder: '例) 青山1-1-1', class: "step4__bottom_contents__bottom__box__input"
          .step4__bottom_contents__bottom__box__top
            .step4__bottom_contents__bottom__box__top__title
              %p 建物名
            .step4__bottom_contents__bottom__box__top__arbitrary_icon
              %p 任意
          = f.text_field :building_name, autocomplete: "building_name", placeholder: '例) 柳ビル103', class: "step4__bottom_contents__bottom__box__input"
         

          .step4__bottom_contents__bottom__box__top
            .step4__bottom_contents__bottom__box__top__title
              %p 電話番号
            .step4__bottom_contents__bottom__box__top__arbitrary_icon
              %p 任意
          .step4__bottom_contents__bottom__box__input
            %p.placeholder 例）08012345678
          %input.next-btn{type: 'submit',value: '次へ進む',class:"step4__bottom_contents__bottom__box__submit_btn"} 
  
  = render "/items/sheard/icon_footer"